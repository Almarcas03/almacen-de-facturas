<% include partes/_header2 %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <h3>Cliente:</h3>
      <h4><%= data[0].cliente %></h4>
      <h3>Precio total:</h3>
      <% if (data) { %>
        <% var tot = 0%> 
        <% for(var i = 0; i < data.length; i++) { %>
            <% tot = tot + data[i].precio*data[i].cantidad %>
        <% } %>
        <h4><%= tot %>€ </h4>
      <% } %>
      </div>
    </div>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>#</td>
            <td>Nombre</td>
            <td>Cantidad</td>
            <td>Precio</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].nombre %></td>
                <td><%= data[i].cantidad %></td>
                <td><%= data[i].precio %>€</td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
<% include partes/_footer %>