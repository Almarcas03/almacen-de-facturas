<% include partes/_header2 %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 ">
      <div class="card-body">
        <form action="/renderF" method="POST">
          <div>
            <input type="text" name="cliente" placeholder="Cliente" class="form-control" id="client" autofocus><br>
          </div><br>
          <button type="submit" class="btn btn-outline-primary">
            Generar
          </button>
        </form>
      </div>
    </div>
    <div class="col-md-7 offset-md-2">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>#</td>
            <td>Nombre</td>
            <td>Cantidad</td>
            <td>Precio</td>
            <td>Cliente</td>
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].nombre %></td>
                <td><%= data[i].cantidad %></td>
                <td><%= data[i].precio %>â‚¬</td>
                <td><%= data[i].cliente %></td>
                <td>
                  <a type="submit" href="/ign/<%= data[i].id %>" class="btn btn-warning">Ignorar en la Factura</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% include partes/_footer %>
